.wrapper.fadeInDown
	#formContent
		h2.active.underlineHover((click)="signIn()")  Sign In 
		h2.inactive.underlineHover((click)="signUp()") Sign Up 
		.fadeIn.first
		div(*ngIf="singIn")
			//- img#icon()
			form([formGroup]="loginForm", (ngSubmit)="onLogin(loginForm.value)")
				input#login.fadeIn.second(type='text' formControlName="usuario" placeholder='login')
				input#password.fadeIn.third(type='password' formControlName="password" placeholder='password')
				input.fadeIn.fourth(type='submit' value='Log In')
			div(*ngIf="password")
				p.userPassword Usuario o contrase√±a incorrectos
			#formFooter
				a.underlineHover(href='') Forgot Password?
		div(*ngIf="singUp")
			//- img#icon()
			form
				input#login.fadeIn.second(type='text' name='login' placeholder='Name')
				input#login.fadeIn.second(type='text' name='login' placeholder='Last name')
				input#login.fadeIn.second(type='text' name='login' placeholder='Email')
				input#password.fadeIn.third(type='text' name='login' placeholder='Password')
				input#password.fadeIn.third(type='text' name='login' placeholder='Confirm password')
				input.fadeIn.fourth(type='submit' value='Sing In')
