h1 Agregar Cita  

	form.contenedor( [formGroup]="formCitasUser")
		div
			label Comentario
			input( type="text" ,formControlName="comentario" )

		div
			label Fecha de cita
			input(type="date" formControlName="fecha_cita")

		div
			label Sede
			select(formControlName="sede")
				option(value="",  disabled) Seleccione Sedes 
				option([value]="sede.id_sede", *ngFor="let sede of sedes") {{sede.nombre_sede}}   

		div
			label Area
			select(name="" formControlName="area")
				option(value="", disabled) Seleccione Areas 
				option([value]="area.id_area", *ngFor="let area of areas") {{area.nombre_area}}   

		div
			label  Hora
			select(name="" formControlName="hora")
				option(value="", disabled) Seleccione Horario de atenci√≥n 
				option([value]="hora.id_hora", *ngFor="let hora of horas") {{hora.rango_horas}}   


	button( (click)="saveCita()") Guardar
